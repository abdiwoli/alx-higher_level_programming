#!/usr/bin/python3
"""def class_to_json(obj):"""


def class_to_json(obj):
    """class to json"""
    json_dict = {}
    for k, v in obj.__dict__.items():
        if isinstance(v, (str, int, bool, list, dict)):
            json_dict[k] = v
    return json_dict
                      
class MyClass:
    """ My class
    """

    def __init__(self, name):
        self.name = name
        self.number = 0

    def __str__(self):
        return "[MyClass] {} - {:d}".format(self.name, self.number)


m = MyClass("John")
m.number = 89
print(type(m))
print(m)

mj = class_to_json(m)
print(type(mj))
print(mj)
